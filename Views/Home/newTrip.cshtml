@model Trip

<div class="container">
    <form asp-action="AddTrip" asp-controller="Home">
        <div class="form-group">
            <span asp-validation-for="Destination"></span>
            <label asp-for="Destination" ></label>
            <input type="text" asp-for="Destination"/>
        </div>
        <div class="form-group">
            <span asp-validation-for="StartDate"></span>
            <label asp-for="StartDate" ></label>
            <input type="Date" asp-for="StartDate"/>
        </div>
        <div class="form-group">
            <span asp-validation-for="EndDate"></span>
            <label asp-for="EndDate" ></label>
            <input type="Date" asp-for="EndDate"/>
        </div>
        <div class="form-group">
            <span asp-validation-for="Plan"></span>
            <label asp-for="Plan" ></label>
            <textarea asp-for="Plan"></textarea>
        </div>
        <input type="submit" value="Add Trip"/>
    </form>
</div>