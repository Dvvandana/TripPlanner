@{
    ViewData["Title"] = "Home Page";
}
@model RegLoginUser
<div class="col">
<h1> Register</h1>
<a href="login">Login</a>
<form asp-action="RegisterUser" asp-controller="Home" method ="post">
    <div class="form-group">
        <span asp-validation-for="RegUser.FirstName"></span>
        <label asp-for="RegUser.FirstName"></label>
        <input type="text" asp-for="RegUser.FirstName" />
    </div>
    <div class="form-group">
        <span asp-validation-for="RegUser.LastName"></span>
        <label asp-for="RegUser.LastName"></label>
        <input type="text" asp-for="RegUser.LastName" />
    </div>
    <div class="form-group">
        <span asp-validation-for="RegUser.Email"></span>
        <label asp-for="RegUser.Email"></label>
        <input type="text" asp-for="RegUser.Email" />
    </div>
    <div class="form-group">
        <span asp-validation-for="RegUser.Password"></span>
        <label asp-for="RegUser.Password"></label>
        <input type="password" asp-for="RegUser.Password" />
    </div>
    <div class="form-group">
        <span asp-validation-for="RegUser.Confirm"></span>
        <label asp-for="RegUser.Confirm"></label>
        <input type="password" asp-for="RegUser.Confirm" />
    </div>
    <input type="submit" value="Register"/>
</form>
</div>
<div class="col">
    <a href="/logOut"> LogOut</a>
    <h1>Login</h1>
    <form asp-action="LoginUser" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="LoginUser.Email"></span>
            <label asp-for="LoginUser.Email"></label>
            <input asp-for="LoginUser.Email" type = "text"/>
            
        </div>
        <div class="form-group">
            <span asp-validation-for="LoginUser.Password"></span>
            <label asp-for="LoginUser.Password"></label>
            <input asp-for="LoginUser.Password" type = "text"/>
        </div>
        <input type="submit" value="Login"/>
    </form>
</div>
